[
    {
        "name": "theme_info",
        "theme_name": "Sunny",
        "theme_version": "1.0.0",
        "theme_author": "SunEcom",
        "theme_documentation_url": "https://google.com",
        "theme_support_url": "https://google.com"
    },
    {
        "name": "General",
        "settings": [
            {
                "type": "text",
                "default": "Sunny",
                "label": "Store name",
                "placeholder": "Store name",
                "id": "store_name"
            },
            {
                "type": "header",
                "content": "Logo"
            },
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Logo"
            },
            {
                "type": "range",
                "id": "logo_width_desktop",
                "label": "Desktop logo width",
                "min": 50,
                "max": 250,
                "step": 10,
                "unit": "px",
                "default": 100
            },
            {
                "type": "range",
                "id": "logo_width_mobile",
                "label": "Mobile logo width",
                "min": 50,
                "max": 250,
                "step": 10,
                "unit": "px",
                "default": 100
            },
            {
                "type": "header",
                "content": "Favicon"
            },
            {
                "type": "checkbox",
                "id": "use_favicon",
                "label": "Use favicon icon (32px x 32px)",
                "default": true
            },
            {
                "type": "image_picker",
                "id": "favicon",
                "label": "Add favicon (32px x 32px)",
                "info": "Will be scaled down to 32 x 32px"
            },
            {
                "type": "header",
                "content": "Scroll to top button"
            },
            {
                "type": "checkbox",
                "id": "show_scroll_top_button",
                "label": "Show scroll to top button",
                "default": true
            }
        ]
    },
    {
        "name": "Layout",
        "settings": [
            {
                "type": "range",
                "id": "template_width",
                "label": "Template width",
                "default": 1280,
                "min": 1200,
                "max": 1920,
                "step": 10,
                "unit": "px"
            }
        ]
    },
