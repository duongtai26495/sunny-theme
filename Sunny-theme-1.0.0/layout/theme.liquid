<!doctype html>
<html
  lang="{{ request.locale.iso_code }}"
  data-template="{{ template.name }}"
>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>
    <link rel="stylesheet" href="{{ 'base.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'theme-global.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'swiper-bundle.min.css' | asset_url }}">
    <link type="text/css" href="{{ 'theme.css' | asset_url }}" rel="stylesheet">
    {% comment %} {% render 'style-tags' %} {% endcomment %}
    {{ content_for_header }}
  </head>
  <body class="relative overflow-x-hidden" style="background-color: {{settings.primary_color }};">
    {%- liquid
      sections 'header-group'
    -%}

    <main role="main" id="MainContent">
      {{ content_for_layout }}
    </main>

    {%- liquid
      sections 'footer-group'
    -%}

    {%- liquid  
    if settings.cart_type == 'drawer' 
      render 'cart-drawer'
    endif 
    -%}

    <script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'theme-global.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'swiper.min.js' | asset_url }}" defer="defer"></script>
  </body>
</html>
