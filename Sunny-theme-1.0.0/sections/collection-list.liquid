<section
  class="m-auto section-{{ section.settings.container }} px-4 lg:px-0"
  style="background-color: {{ section.settings.background }};padding-top:{{ section.settings.spacing_top }}px;padding-bottom:{{ section.settings.spacing_bottom }}px"
>

  <div class="sn-collection-list flex-col flex {% case section.settings.style %}{% when 'style-1' %}lg:flex-row{% when 'style-2' %}lg:flex-col{% endcase %}">
  <div class="sn-collection-list__heading w-full {% case section.settings.style %}{% when 'style-1' %}lg:w-1/4{% when 'style-2' %}lg:w-full{% endcase %}">
    <h3
      style="color: {{ section.settings.content_color }}"
      class="
      text-center lg:text-start 
        {% case section.settings.heading_size %}
        {%- when 'small' -%}
            text-lg lg:text-xl
        {%- when 'medium' -%}
            text-xl lg:text-2xl
        {% when 'large' %}
            text-2xl lg:text-3xl
        {% endcase %} font-bold w-full
      "
    >
      {{ section.settings.heading }}
    </h3>
  </div>
    <div
      class="sn-collection-list swiper swiper-container {% case section.settings.style %}{% when 'style-1' %}lg:w-3/4{% when 'style-2' %}lg:w-full{% endcase %} mx-auto relative flex items-center gap-5"
      duration="{{ section.settings.duration }}"
      slides-per-view="{{ section.settings.slides_per_view }}"
      data-auto-play="{{ section.settings.is_auto_play }}"
      data-pagination="{{ section.settings.is_show_pagination }}"
      data-navigation="{{ section.settings.is_show_navigation }}"
      data-loop="{{ section.settings.is_loop }}"
    >
      
      <div class="flex swiper-wrapper justify-start">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            {% render 'collection-card', collection: block.settings.collection, block: block %}
          </div>
        {% endfor %}
      </div>
      {% if block.settings.is_show_pagination %}
        <div class="relative min-h-8">
          <div class="swiper-pagination"></div>
        </div>
      {% endif %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Collection list",
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Container width",
      "options": [
        {
          "label": "Container",
          "value": "container"
        },
        {
          "label": "Narrow",
          "value": "narrow_width"
        },
        {
          "label": "Full width",
          "value": "full_width"
        }
      ],
      "default": "container",
      "info": "Width value of section content"
    },
    {
      "type": "range",
      "id": "spacing_top",
      "min": 0,
      "max": 100,
      "default": 50,
      "step": 5,
      "unit": "px",
      "label": "Section spacing top"
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "min": 0,
      "max": 100,
      "default": 50,
      "step": 5,
      "unit": "px",
      "label": "Section spacing bottom"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background section",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "placeholder": "Big sale upto 30% today.",
      "default": "Big sale upto 30% today."
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "label": "Small",
          "value": "small"
        },
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Large",
          "value": "large"
        }
      ],
      "default": "medium",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "image_style",
      "label": "Image style",
      "options": [
        {
          "label": "Square",
          "value": "square"
        },
        {
          "label": "Circle",
          "value": "circle"
        }
      ],
      "default": "square"
    },
    {
      "type": "select",
      "id": "style",
      "options": [
        {
          "label": "Heading left",
          "value": "style-1"
        },
        {
          "label": "Heading top",
          "value": "style-2"
        }
      ],
      "default": "style-1",
      "label": "Section style"
    },
    {
      "type": "header",
      "content": "Slider settings"
    },
    {
      "type": "checkbox",
      "id": "slider",
      "label": "Enable slide",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "mobile_grid",
      "default": false,
      "label": "Show grid on mobile"
    },
    {
      "type": "checkbox",
      "id": "is_loop",
      "default": true,
      "label": "Loop"
    },
    {
      "type": "checkbox",
      "id": "is_auto_play",
      "default": true,
      "label": "Autoplay"
    },
    {
      "type": "range",
      "id": "slides_per_view",
      "min": 3,
      "max": 5,
      "default": 3,
      "step": 1,
      "label": "Items per view"
    },
    {
      "type": "range",
      "id": "duration",
      "min": 3,
      "max": 15,
      "default": 5,
      "step": 1,
      "unit": "s",
      "info": "Content conversion speed",
      "label": "Duration"
    },
    {
      "type": "checkbox",
      "id": "is_show_pagination",
      "default": true,
      "label": "Show pagination dots"
    },
    {
      "type": "checkbox",
      "id": "is_show_navigation",
      "default": true,
      "label": "Show navigation arrows"
    },
    {
      "type": "select",
      "id": "navigation_style",
      "options": [
        {
          "label": "Light",
          "value": "light"
        },
        {
          "label": "Dark",
          "value": "dark"
        }
      ],
      "default": "dark",
      "label": "Navigation style"
    }
  ],
  "blocks": [
    {
      "name": "Collection",
      "type": "collection",
      "limit": 12,
      "settings": [
        {
          "type": "header",
          "content": "Select collection"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Collection image"
        },
        {
          "type": "checkbox",
          "id": "use_default_image",
          "default": true,
          "label": "Show collection image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection list"
    }
  ]
}
{% endschema %}
