<div class="flex gap-3 items-center w-fit h-fit">
  {% if settings.facebook_link %}
    <div class="w-fit h-fit">
      <a class="flex items-center gap-1 underline text-[12px] lg:text-sm" href="{{settings.facebook_link}}">
        {% render 'icons', type:'facebook', color:{{settings.footer_text}} -%}
        {% if settings.facebook_label != blank and block.settings.is_show_label == false %}
          {{- settings.facebook_label -}}
        {% endif %}
      </a>
    </div>
  {% endif %}
  {% if settings.instagram_link %}
    <div class="w-fit h-fit">
      <a class="flex items-center gap-1 underline text-[12px] lg:text-sm" href="{{settings.instagram_link}}">
        {% render 'icons', type:'instagram', color:{{settings.footer_text}} -%}
        {% if settings.instagram_label != blank and block.settings.is_show_label == false %}
          {{- settings.instagram_label -}}
        {% endif %}
      </a>
    </div>
  {% endif %}
  {% if settings.twitter_link %}
    <div class="w-fit h-fit">
      <a class="flex items-center gap-1 underline text-[12px] lg:text-sm" href="{{settings.twitter_link}}">
        {% render 'icons', type:'twitter', color:{{settings.footer_text}} -%}
        {% if settings.twitter_label != blank and block.settings.is_show_label == false %}
          {{- settings.twitter_label -}}
        {% endif %}
      </a>
    </div>
  {% endif %}
  {% if settings.pinterest_link %}
    <div class="w-fit h-fit">
      <a class="flex items-center gap-1 underline text-[12px] lg:text-sm" href="{{settings.pinterest_link}}">
        {% render 'icons', type:'pinterest', color:{{settings.footer_text}} -%}
        {% if settings.pinterest_label != blank and block.settings.is_show_label == false %}
          {{- settings.pinterest_label -}}
        {% endif %}
      </a>
    </div>
  {% endif %}
</div>
